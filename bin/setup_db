#!/usr/bin/env node
require("dotenv").config();

const { gql, request } = require("graphql-request");
const Redis = require("ioredis");

const redis = new Redis(process.env.REDIS_URL);

const QUERY = gql`
  query {
    allCryptobrand {
      slug {
        current
      }
    }
  }
`;

(async () => {
  try {
    console.log("Adding projects to the database");

    let redisMulti = redis.multi();
    const projectsFromCMS = (await request(process.env.CMS_URL, QUERY))
      .allCryptobrand;

    projectsFromCMS.forEach((project) => {
      redisMulti.setnx(project.slug.current, 0);
    });

    await redisMulti.exec();
    console.log("Done!");

    redis.disconnect();
    process.exit(0);
  } catch (error) {
    console.error(error);
    redis.disconnect();
    process.exit(-1);
  }
})();
